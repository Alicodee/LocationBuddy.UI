<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

            <ImageView
                android:id="@+id/coverPhoto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.9"
                android:scaleType="fitXY"
                android:background="@color/colorPrimary"/>

            <TextView
                android:padding="6dp"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:text="Ali Hamza"
                android:textColor="@color/buttonColor"
                android:textSize="18sp"
                android:gravity="center|bottom"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="Thinker,Data Scientist,Programmer"
                android:textColor="@color/divider"
                android:textSize="14sp"
                android:gravity="center|top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.12"
            android:weightSum="4"
            android:padding="8dp"
            android:layout_marginStart="18dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_short_text_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/divider"
                    android:text="Name"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="start"
                android:layout_gravity="center"
                android:textColor="@color/secondary_text"
                android:text="Ali Hamza"
                android:textSize="14sp"
                android:textAllCaps="false" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="0dp"
            android:background="@color/divider"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=" 0.12"
            android:weightSum="4"
            android:padding="8dp"
            android:layout_marginStart="18dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_email"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/divider"
                    android:text="Email"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="start"
                android:textColor="@color/secondary_text"
                android:text="alihamza@gmail.com"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="0dp"
            android:background="@color/divider"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=" 0.12"
            android:weightSum="4"
            android:padding="8dp"
            android:layout_marginStart="18dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/divider"
                    android:text="Call"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="start"
                android:textColor="@color/secondary_text"
                android:text="+92 342 7212801"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider"
            android:layout_marginTop="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=" 0.12"
            android:weightSum="4"
            android:padding="8dp"
            android:layout_marginStart="18dp">

            <LinearLayout
                android:layout_weight="0.65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/divider"
                    android:text="Location"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="start"
                android:textColor="@color/secondary_text"
                android:text="House#132, Street#6, Jinnah Town, Haroonabad"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="0dp"
            android:background="@color/divider"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=" 0.12"
            android:weightSum="4"
            android:padding="8dp"
            android:layout_marginStart="18dp">

            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_language"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/divider"
                    android:text="Language"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="start"
                android:textColor="@color/secondary_text"
                android:text="English"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="0dp"
            android:background="@color/divider"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="8dp"
            android:layout_marginStart="18dp">

            <LinearLayout
                android:layout_weight="1.09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_access"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/divider"
                    android:text="Time"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="start"
                android:textColor="@color/secondary_text"
                android:text="GMT-4"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="top" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
      android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="My Profile"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_menu"
        android:layout_gravity="top|end" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_camera"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="6dp"
        android:layout_gravity="top|end" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_edit"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="6dp"
        android:layout_gravity="top|end" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="70dp"
        android:src="@drawable/ali"/>
</FrameLayout>